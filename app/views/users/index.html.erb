<div class="container">
    <div class="row">

   <%= render 'userinfo', user: current_user %>

   <div class="col-lg-8">

    <table class="table">
      <h2>Users</h2>
      <thead>
        <tr>
         <th>image</th>
         <th>name</th>
         <th></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
         <tr>
             <td><%= image_tag user.get_profile_image(40,40) %></td>
             <td><%= user.name %></td>
             <td><%= link_to "show", user_path(user.id) %></td>
         </tr>
        <%end%>
      </tbody>
    </table>
   </div>
  </div>
</div>
