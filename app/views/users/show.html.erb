<p id="notice">
 <%= flash[:notice] %>
</p>
<div class="container">
    <div class="row">
   <%= render 'userinfo', user: @user %>

   <div class="col-lg-8">

    <table class="table">
      <h2>Books</h2>

      <thead>
        <th>
         <th>Title</th>
         <th>Opinion</th>
         <th colspan="3"></th>
        </th>
      </thead>
      <tbody>
         <% @books.each do |book| %>
        <tr>
            <td>
                <%= link_to user_path(book.user.id)  do %>
                <%= image_tag book.user.get_profile_image(40,40) %>
                <% end %>
            </td>
            <td><%= link_to book.title, book_path %></td>
            <td><%= book.body %></td>
        </tr>
        <%end%>
      </tbody>
    </table>
   </div>
  </div>
 </div>