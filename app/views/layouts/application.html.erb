<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width,initial-scale=1">


    <%= stylesheet_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex-column vh-100">
  <header class="shadow-sm">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <a class="navbar-brand p-3" href="/">Bookers</a>
        <button class="navbar-toggler" type="button" date-toggle="collapse" date-target="navbarNavDropdown"
                     aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav ml-auto">

          <% if user_signed_in? %>

            <li class="nav-item">
              <%= link_to "Home", user_path(current_user.id) %>
            </li>

            <li class="navitem">
              <%= link_to "Users", users_path %>
            </li>
            <li class="nav-item">
              <%= link_to "Books", books_path %>
            </li>
            <li class="nav-item">
              <%= link_to "Log out", destroy_user_session_path, method: :delete %>
            </li>
          <% else %>

            <li class="nav-item">
              <%= link_to "Home", root_path %>
            </li>
            <li class="nav-item">
              <%= link_to "About", about_path %>
            </li>
            <li class-"nav-item">
              <%= link_to "Sign_up", new_user_registration_path %>
            </li>
            <li class="nav-item">
              <%= link_to "Log in", user_session_path  %>

            </li>
          <% end %>
          </ul>
        </div>
      </div>
    </nav>
  </header>
  <main class="mb-auto">
    <div class="container">
      <div class="row">
        <%= yield %>
      </div>
    </div>
  </main>
</body>
</html>
<footer>
<div class= "container mt-5" >
  <div class= "row">
    <div class= "mx-auto">
      <p>CopyRight Infratop.inc</p>
    </div>
  </div>
</footer>
