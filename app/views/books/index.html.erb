<div class="container">
    <div class="row">
<%= render 'userinfo', user: @user %>


   <div class="col-lg-8">

    <table class="table table-striped">
      <h2>Books</h2>

      <thead>
        <th>
         <th>Title</th>
         <th>Opinion</th>
         <th colspan="2"></th>
        </th>
