
   <div class="col-lg-4">
     <h2>User info</h2>

     <div>
      <%= image_tag user.get_profile_image(100,100) %>
      <p>name <%= user.name %></p>
      <p>introduction <%= user.introduction %></p>
      <%= link_to edit_user_path(current_user.id), class:"btn btn-outline-secondary btn-block" do %>
        <strong><i class="fas fa-user-cog"></i></strong>
       <% end %>
     </div>

    <h1>New Book</h1>

    <%= form_with model:@book do |f| %>
    <h4>Title</h4>
    <%= f.text_field:title %>

    <h4>Opinion</h4>
    <%= f.text_area:body %>

    <%= f.submit 'Create Book' %>

    <%end%>
   </div>